<Window x:Class="GradeBooksystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeBooksystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="4" Width="400" Height="380" VerticalAlignment="Top" HorizontalAlignment="Left" CornerRadius="50" BorderBrush="Black" BorderThickness="3" Grid.ColumnSpan="2" Margin="196,27,0,0" ></Border>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Width="180" Height="50" Content="Welcome" FontFamily="Comic Sans MS"  FontSize="22" Margin="332,29,288,30"></Label>
        <StackPanel Grid.Row="1" Width="380" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="210,4,0,105" Grid.RowSpan="2">
            <Label Content="UserName " FontFamily="Comic Sans MS" FontSize="20"></Label>
            <TextBox Name="txtUser" Height="40" FontFamily="Comic Sans MS"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Width="380" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="210,4,0,105" Grid.RowSpan="2">
            <Label Content="Password " FontFamily="Comic Sans MS" FontSize="20"></Label>
            <PasswordBox Name="txtpass" Height="40" FontFamily="Comic Sans MS" ></PasswordBox>
        </StackPanel>
        <TextBlock x:Name="mytexttrue" Grid.Row="2" Grid.ColumnSpan="2" Width="330" Height="20" Margin="219,83,251,104" Grid.RowSpan="2" Foreground="green"></TextBlock>
        <TextBlock x:Name="mytxtfalse" Grid.Row="2" Grid.ColumnSpan="2" Width="330" Height="20" Margin="219,83,251,104" Grid.RowSpan="2" Foreground="red"></TextBlock>
        <Border CornerRadius="20" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" Width="170" Height="40" BorderBrush="Teal" BorderThickness="3" Margin="315,22,315,6">
            <Button Content="Login" FontFamily="Comic Sans MS" FontSize="23" Width="170" Height="40" Background="White" Cursor="Hand" BorderThickness="0" Click="Button_Click"/>
        </Border>
    </Grid>
</Window>
