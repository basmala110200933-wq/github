<Window x:Class="GradeBooksystem.Teached_Managment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeBooksystem"
        mc:Ignorable="d"
        Title="Teacher Management" Height="500" Width="850" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Background="Red" Width="110" Height="40" HorizontalAlignment="Right" Content="Logout" FontFamily="Comic Sans MS" VerticalAlignment="Top" Click="Button_Click"></Button>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Label Content="Select Course:" Width="120" Height="30" FontFamily="Comic Sans MS" FontSize="14"/>
            <ComboBox Name="coursebox" Width="200" Height="30" FontFamily="Comic Sans MS" FontSize="12" Margin="10,0,50,0"/>

            <Label Content="Select Student:" Width="120" Height="30" FontFamily="Comic Sans MS" FontSize="14"/>
            <ComboBox Name="studentbox" Width="170" Height="30" FontFamily="Comic Sans MS" FontSize="12" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <Label Content="Assignment Name:" Width="140" Height="30" FontFamily="Comic Sans MS" FontSize="14"/>
            <TextBox Name="txtAssignment" Width="180" Height="30" FontFamily="Comic Sans MS" FontSize="12" Margin="5"/>

            <Label Content="Score:" Width="60" Height="30" FontFamily="Comic Sans MS" FontSize="14" Margin="20,0,0,0"/>
            <TextBox Name="txtScore" Width="80" Height="30" FontFamily="Comic Sans MS" FontSize="12" Margin="5" Text="0"/>

            <Label Content="Max Score:" Width="80" Height="30" FontFamily="Comic Sans MS" FontSize="14" Margin="10,0,0,0"/>
            <TextBox Name="txtMaxScore" Width="80" Height="30" FontFamily="Comic Sans MS" FontSize="12" Margin="5" Text="100"/>
        </StackPanel>

        <DataGrid Name="dgAdmin" Grid.Row="2" Margin="10" 
                  AutoGenerateColumns="True" FontFamily="Comic Sans MS" FontSize="12"
                  CanUserAddRows="False" SelectionChanged="dgAdmin_SelectionChanged"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add" Name="btnAdd" Click="btnAdd_Click" 
                    Width="90" Height="35" FontFamily="Comic Sans MS" FontSize="12" 
                    Background="LightGreen" Margin="5"/>
            <Button Content=" Edit" Name="btnEdit" Click="btnEdit_Click" 
                    Width="90" Height="35" FontFamily="Comic Sans MS" FontSize="12" 
                    Background="LightBlue" Margin="5"/>
            <Button Content="Delete" Name="btnDelete" Click="btnDelete_Click" 
                    Width="90" Height="35" FontFamily="Comic Sans MS" FontSize="12" 
                    Background="LightCoral" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>