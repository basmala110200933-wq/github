<Window x:Class="GradeBooksystem.ViewGradesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeBooksystem"
        mc:Ignorable="d"
        Title="ViewGradesPage" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Logout" FontFamily="Comic Sans MS" FontSize="19" Grid.Column="2" Width="130" Background="red" HorizontalAlignment="Left" BorderBrush="Black" Cursor="Hand" BorderThickness="1.5" Click="Button_Click" Margin="137,0,0,0"/>
        <Label Content="View Grades" FontFamily="Comic Sans MS" FontSize="21" Width="130" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,6,0,0" Grid.RowSpan="2"></Label>
        <DataGrid Name="dgGrades" Grid.ColumnSpan="3" Height="160" Grid.Row="1" BorderBrush="Teal" AutoGenerateColumns="False" BorderThickness="3" FontFamily="Comic Sans MS" Margin="0,13,0,90" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Grade ID" Binding="{Binding GradeID}"></DataGridTextColumn>
                <DataGridTextColumn Header="AssignmentName" Binding="{Binding AssignmentName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}"></DataGridTextColumn>
                <DataGridTextColumn Header="MaxScore" Binding="{Binding MaxScore}"></DataGridTextColumn>
                <DataGridTextColumn Header="Student Name" Binding="{Binding enrollment.User.UName}" Width="150"/>
                <DataGridTextColumn Header="Course" Binding="{Binding enrollment.Course.CName}" Width="150"/>
                <DataGridTextColumn Header="Enroll Date" Binding="{Binding enrollment.EDate, StringFormat=dd/MM/yyyy}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Name="AVG" Grid.Row="4" Grid.ColumnSpan="2" Height="40" FontFamily="Comic Sans MS" FontSize="20" Foreground="green" FontWeight="Bold"></Label>
    </Grid>
</Window>
